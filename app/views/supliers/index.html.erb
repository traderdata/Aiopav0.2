<div id="page-wrapper">
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">General Settings</h1>
    <br>
    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Cnpj</th>
        <th>Country</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @supliers.each do |suplier| %>
          <tr>
            <td><%= suplier.name %></td>
            <td><%= suplier.cnpj %></td>
            <td><%= suplier.country %></td>
            <td><%= link_to 'Show', suplier %></td>
            <td><%= link_to 'Edit', edit_suplier_path(suplier) %></td>
            <td><%= link_to 'Destroy', suplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

  <%= link_to 'New Suplier', new_suplier_path %>

</div>

