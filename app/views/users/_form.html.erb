<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Users</h1>
      <div class="row">
        <div class="col-lg-6">
          <div class="panel panel-default">
            <div class="panel-heading">
              Company Users
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
              <div class="table-responsive">
                <%= form_for(@user) do |f| %>
                    <% if @user.errors.any? %>
                        <div id="error_explanation">
                          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                          <ul>
                            <% @user.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                            <% end %>
                          </ul>
                        </div>
                    <% end %>

                    <div class="field">
                      <%= f.label t('helpers.label.user.firstname') %><br>
                      <%= f.text_field :firstname , class:'form-control', :placeholder => t('helpers.label.user.firstname')%>
                    </div>
                    <div class="field">
                      <%= f.label t('helpers.label.user.lastname') %><br>
                      <%= f.text_field :lastname , class:'form-control', :placeholder => t('helpers.label.user.lastname')%>
                    </div>
                    <div class="field">
                      <%= f.label t('helpers.label.user.phone') %><br>
                      <%= f.text_field :phone , class:'form-control', :placeholder => t('helpers.label.user.phone')%>
                    </div>
                    <div class="form-group">
                      <%= f.label t('helpers.label.user.email') %><br>
                      <%= f.email_field :email , class:'form-control', :placeholder => t('helpers.label.user.email')%>
                    </div>
                    <div class="field">
                      <%= f.label t('helpers.label.user.password') %><br>
                      <%= f.password_field :password, class:'form-control'%>
                    </div>
                    <div class="field">
                      <%= f.label t('helpers.label.user.retypepassword') %><br>
                      <%= f.password_field :password_confirmation, class:'form-control'%>
                    </div>
                    <div class="form-group">
                      <%= f.radio_button :role, 'U', :checked=>true%> <%= t('helpers.label.user.role-user') %>
                      <%= f.radio_button :role, 'A'%> <%= t('helpers.label.user.roler-admin') %>
                    </div>
                    <div class="actions">
                      <%= f.submit t('buttons.save') , class: "btn btn-default", data:{ confirm: "Are you sure?" }  %>
                      <%= link_to 'Cancel',:back, class: "btn btn-default"  %>
                    </div>
                <% end %>
              </div>
              <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
        </div>
      </div>
    </div>
  </div>
</div>




