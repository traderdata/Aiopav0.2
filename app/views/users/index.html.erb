<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Users</h1>
      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              Company Users
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Role</th>
                    <th width="50"></th>
                  </tr>
                  </thead>

                  <tbody>
                  <% @users.each do |user| %>
                      <tr>
                        <td><%= user.firstname %></td>
                        <td><%= user.lastname %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phone %></td>
                        <td><%=
                            case user.role
                              when 'U'
                                t('helpers.label.user.role-user')
                              when 'A'
                                t('helpers.label.user.roler-admin')
                              else
                                '-'
                            end
                        %></td>
                        <td><div class="btn-group">
                          <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                            Actions
                            <span class="caret"></span>
                          </button>
                          <ul class="dropdown-menu pull-right" role="menu">
                            <li><%= link_to "Edit User", edit_user_path(user)%></li>
                            <li><%= link_to 'Delete User', user, method: :delete, data: { confirm: 'Are you sure?' }%></li>
                          </ul>
                        </div></td>
                      </tr>
                  <% end %>
                  </tbody>

                </table>
              </div>
              <!-- /.table-responsive -->
              <%= link_to "New User", new_user_path , class: "btn btn-default"  %></td>
            </div>
            <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
        </div>
      </div>
    </div>
  </div>
</div>


