<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Marketplaces</h1>
      <div class="row">
        <div class="col-lg-6">
          <div class="panel panel-default">
            <div class="panel-heading">
              Configured Marketplaces
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>Marketplace</th>
                    <th>Login</th>
                    <th>Senha</th>
                    <th width="50">Actions</th>
                  </tr>
                  </thead>
                  <tbody>
                  <% @suplier.suplier_marketplaces.each do |suplier_marketplace| %>
                      <tr>
                        <td><%= suplier_marketplace.marketplace.name%></td>
                        <td><%= suplier_marketplace.login%></td>
                        <td>******</td>
                        <td><div class="btn-group">
                          <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                            Actions
                            <span class="caret"></span>
                          </button>
                          <ul class="dropdown-menu pull-right" role="menu">
                            <li><a href="#">Test Connection</a></li>
                            <li class="divider"></li>
                            <li><%= link_to "Edit Connection", edit_suplier_marketplace_path(suplier_marketplace)%></li>
                            <li><%= link_to 'Destroy Connection', suplier_marketplace, method: :delete, data: { confirm: 'Are you sure?' }%></li>
                          </ul>
                        </div></td>
                      </tr>
                  <% end %>

                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
        </div>
        <div class="col-lg-6">
          <div class="panel panel-default">
            <div class="panel-heading">
              Available Marketplaces
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>Marketplace</th>
                    <th>URL</th>
                    <th>Inbound Connection</th>
                    <th>Outbound Connection</th>
                  </tr>
                  </thead>
                  <tbody>
                  <% @marketplaces.each do |marketplace| %>
                      <tr>
                        <td><%= marketplace.name%></td>
                        <td><%= marketplace.url%></td>
                        <td><%=
                            case marketplace.retrieve_data_type
                            when 'WS'
                            'Webservice'
                            when 'BA'
                            'Browser automation'
                            else
                            '-'
                            end
                        %></td>
                        <td><%=
                            case marketplace.input_data_type
                              when 'WS'
                                'Webservice'
                              when 'BA'
                                'Browser automation'
                              else
                                '-'
                            end
                        %></td>

                      </tr>

                  <% end %>


                  </tbody>
                </table>
                <br>
                <%= link_to "Configure New Marketplace Connection", new_suplier_marketplace_path , class: "btn btn-default"  %></td>
              </div>
              <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
        </div>


      </div>
    </div>
  </div>

</div>








